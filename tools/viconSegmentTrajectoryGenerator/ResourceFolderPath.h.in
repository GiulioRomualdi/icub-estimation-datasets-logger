#ifndef RESOURCE_FOLDERPATH_H_IN
#define RESOURCE_FOLDERPATH_H_IN

#define SOURCE_CONFIG_DIR "@CMAKE_CURRENT_SOURCE_DIR@"

#include <iostream>

inline std::string getViconMountPCDPath()
{
    return std::string(SOURCE_CONFIG_DIR) + "/resources/vicon-mount-model.pcd";
}

inline std::string getDatasetPath()
{
    return std::string(SOURCE_CONFIG_DIR) + "/resources/vicon-marker-traj.mat";
}


#endif // RESOURCE_FOLDERPATH_H_IN


